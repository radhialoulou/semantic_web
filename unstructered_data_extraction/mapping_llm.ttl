@base <http://example.com/rules/> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix movie: <http://saraaymericradhi.org/movie-ontology#> .


# -----------------------------------------------------------------------------
# TriplesMap: French Adaptation (France & Québec)
# -----------------------------------------------------------------------------
<#FrenchAdaptationMap>
    rml:logicalSource [
        rml:source "movies_cleaned_final.csv" ;
        rml:referenceFormulation ql:CSV
    ] ;
    
    # On crée une instance de FrenchAdaptation liée au film
    rr:subjectMap [
        rr:template "http://saraaymericradhi.org/movie/{id}/french-adaptation" ;
        rr:class movie:FrenchAdaptation
    ] ;

    rr:predicateObjectMap [
        rr:predicate movie:adaptationYear ;
        rr:objectMap [ rml:reference "hasFrenchAdaptationYear" ; rr:datatype xsd:gYear ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate rdfs:label ;
        rr:objectMap [ rml:reference "hasFrenchTitle" ; rr:language "fr" ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate movie:hasFrenchQuebecTitle ; # Si ajouté à l'onto, sinon rdfs:label@fr-CA
        rr:objectMap [ rml:reference "hasFrenchQuebecTitle" ; rr:language "fr-CA" ]
    ] .

# -----------------------------------------------------------------------------
# TriplesMap: Awards (Succès)
# -----------------------------------------------------------------------------
<#AwardMap>
    rml:logicalSource [
        rml:source "movies_cleaned_final.csv" ;
    ] ;

    rr:subjectMap [
        # On crée un URI unique pour le prix basé sur le film et le nom du prix
        rr:template "http://saraaymericradhi.org/award/{id}_{hasAwardName}" ;
        rr:class movie:Award
    ] ;

    rr:predicateObjectMap [
        rr:predicate movie:awardName ;
        rr:objectMap [ rml:reference "hasAwardName" ; rr:datatype xsd:string ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate movie:hasYearOfAwardGiving ;
        rr:objectMap [ rml:reference "hasAwardYear" ; rr:datatype xsd:gYear ]
    ] .

# -----------------------------------------------------------------------------
# TriplesMap: Theme Song (Musique)
# -----------------------------------------------------------------------------
<#ThemeSongMap>
    rml:logicalSource [
        rml:source "movies_cleaned_final.csv" ;
    ] ;

    rr:subjectMap [
        rr:template "http://saraaymericradhi.org/song/{id}_theme" ;
        rr:class movie:Song
    ] ;

    rr:predicateObjectMap [
        rr:predicate movie:songTitle ;
        rr:objectMap [ rml:reference "hasThemeSongTitle" ; rr:datatype xsd:string ]
    ] .

# -----------------------------------------------------------------------------
# Liens vers le Film (Movie)
# -----------------------------------------------------------------------------
<#MovieNewLinksMap>
    rml:logicalSource [
        rml:source "movies_cleaned_final.csv" ;
    ] ;

    rr:subjectMap [
        rr:template "http://saraaymericradhi.org/movie/{id}" ;
    ] ;

    # Lien vers l'adaptation française
    rr:predicateObjectMap [
        rr:predicate movie:hasFrenchAdaptation ;
        rr:objectMap [ rr:template "http://saraaymericradhi.org/movie/{id}/french-adaptation" ]
    ] ;

    # Lien vers le prix
    rr:predicateObjectMap [
        rr:predicate movie:hasAward ;
        rr:objectMap [ rr:template "http://saraaymericradhi.org/award/{id}_{hasAwardName}" ]
    ] ;

    # Lien vers la musique
    rr:predicateObjectMap [
        rr:predicate movie:hasThemeSong ;
        rr:objectMap [ rr:template "http://saraaymericradhi.org/song/{id}_theme" ]
    ] .