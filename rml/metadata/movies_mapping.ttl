@base <http://saraaymericradhi.org/rml/> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://schema.org/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix movie: <http://saraaymericradhi.org/movie-ontology#> .
@prefix genres: <http://saraaymericradhi.org/movie-ontology/genres#> .

# =============================================================================
# SOURCE: Movies Metadata (normalized CSV)
# =============================================================================

# -----------------------------------------------------------------------------
# TriplesMap: Movie
# -----------------------------------------------------------------------------
<#MovieMap>
    rml:logicalSource [
        rml:source "movies_normalized.csv" ;
        rml:referenceFormulation ql:CSV
    ] ;
    
    rr:subjectMap [
        rr:template "http://saraaymericradhi.org/movie/{id}" ;
        rr:class movie:Movie
    ] ;
    
    # Direct properties on Movie
    rr:predicateObjectMap [
        rr:predicate movie:hasTitle ;
        rr:objectMap [ rml:reference "title" ; rr:datatype xsd:string ]
    ] ;
    
    rr:predicateObjectMap [
        rr:predicate movie:hasTagline ;
        rr:objectMap [ rml:reference "tagline" ; rr:datatype xsd:string ]
    ] ;
    
    rr:predicateObjectMap [
        rr:predicate rdfs:label ;
        rr:objectMap [ rml:reference "title" ; rr:language "en" ]
    ] ;
    
    # Link to IMDB
    rr:predicateObjectMap [
        rr:predicate schema:sameAs ;
        rr:objectMap [ rr:template "https://www.imdb.com/title/{imdb_id}/" ; rr:termType rr:IRI ]
    ] ;
    
    # Link to MovieInformation
    rr:predicateObjectMap [
        rr:predicate movie:hasInformation ;
        rr:objectMap [ rr:template "http://saraaymericradhi.org/movie/{id}/information" ]
    ] ;
    
    # Link to MovieResult
    rr:predicateObjectMap [
        rr:predicate movie:hasResult ;
        rr:objectMap [ rr:template "http://saraaymericradhi.org/movie/{id}/result" ]
    ] ;
    
    # Link to MovieProduction
    rr:predicateObjectMap [
        rr:predicate movie:hasProduction ;
        rr:objectMap [ rr:template "http://saraaymericradhi.org/movie/{id}/production" ]
    ] ;
    
    # Link to MovieContent
    rr:predicateObjectMap [
        rr:predicate movie:hasContent ;
        rr:objectMap [ rr:template "http://saraaymericradhi.org/movie/{id}/content" ]
    ] .


