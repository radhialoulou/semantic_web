# =============================================================================
# SOURCE: Genres (from normalized genres CSV)
# =============================================================================

# -----------------------------------------------------------------------------
# TriplesMap: MovieContent -> Genre (links to SKOS)
# -----------------------------------------------------------------------------
<#MovieGenreMap>
    rml:logicalSource [
        rml:source "movies_genres.csv" ;
        rml:referenceFormulation ql:CSV
    ] ;
    
    rr:subjectMap [
        rr:template "http://saraaymericradhi.org/movie/{movie_id}/content" ;
    ] ;
    
    rr:predicateObjectMap [
        rr:predicate movie:hasGenre ;
        rr:objectMap [ rr:template "http://saraaymericradhi.org/movie-ontology/genres#{genre_name}" ]
    ] .


